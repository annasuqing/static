<?xml version="1.0" encoding="utf-8"?>
<MultilevelIVR>
  <Menu>
    <Extension>1001</Extension>
    <Name>Main Menu</Name>
    <Language>English (United States)</Language>
    <Prompt>
      <Name>company main greeting.mp3</Name>
      <Text>Thank you for calling Acme Corporation. For US Sales press 1, for UK Sales press 2. To connect to the dial by name directory press 3. If you know the extension number of your party, you may dial it at any time.</Text>
      <TextToSpeech>false</TextToSpeech>
    </Prompt>
    <CallHandling>
      <DigitKeyInput>
        <Key>1</Key>
        <Action>ForwardToExtension</Action>
        <Destination>1002</Destination>
      </DigitKeyInput>
      <DigitKeyInput>
        <Key>2</Key>
        <Action>ForwardToExtension</Action>
        <Destination>1003</Destination>
      </DigitKeyInput>
      <DigitKeyInput>
        <Key>3</Key>
        <Action>ConnectToDialByNameDirectory</Action>
      </DigitKeyInput>
      <SpecialKeyInput>
        <Key>#</Key>
        <Action>ReturnToRootMenu</Action>
      </SpecialKeyInput>
      <SpecialKeyInput>
        <Key>*</Key>
        <Action>RepeatMenuGreeting</Action>
      </SpecialKeyInput>
      <NoInput>
        <Action>Disconnect</Action>
      </NoInput>
    </CallHandling>
  </Menu>
