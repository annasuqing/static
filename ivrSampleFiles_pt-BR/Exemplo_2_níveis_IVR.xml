      </SpecialKeyInput>
      <SpecialKeyInput>
        <Key>*</Key>
        <Action>RepeatMenuGreeting</Action>
      </SpecialKeyInput>
      <NoInput>
        <Action>Disconnect</Action>
      </NoInput>
    </CallHandling>
  </Menu>
